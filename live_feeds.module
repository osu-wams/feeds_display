/**
 * Define feed_type field handler
 */
class live_feeds_type_handler_field extends views_handler_field {
  function get_value($values, $field = NULL) {

    // Retrieve field names
    $alias = isset($field) ? $this->aliases[$field] : $this->field_alias;

    if (isset($values->{$alias})){
      // $values->{$alias} contains the field value which is our feed type
      return $values->{$alias};
    }
    else{
      return NULL;
    }
  }
}


/**
 * Define feed_type_in_operator filter
 */
class live_feeds_type_in_operator extends views_handler_filter_in_operator {
  // overwrite the get_value_options function.
  function get_value_options() {

    // Check if we've already set options recently
    if (isset($this->value_options)) {
      return;
    }

    // Get the list of available parser plugins
    $parsers = live_feeds_get_available_parsers();
    if (!$parsers) {
      drupal_set_message(t('No available parsers'));
    }
    $options = array();
    foreach ($parsers as $parser => $info) {
      $options[$parser] = $info['name'];
    }

    // Copy types to options
    $this->value_options = $options;
  }

  function query() {
    // Doublecheck and retrieve field names
    $this->ensure_my_table();
    $field = "$this->table_alias.$this->real_field";

    // Add conditions to view query
    $this->query->add_where(
      $this->options['group'],
      db_or()
        ->condition($field, $this->options['value'], 'in')
    );
  }

}

