/**
 * Implementation of hook_node_view()
 *
 */
function live_feeds_node_view($node, $view_mode, $langcode) {
  if ($view_mode == 'full' && $node->type == 'feed') {
    $content = live_feeds_load_feed($node->feed_type['und'][0]['value'],
       $node->url['und'][0]['value'], $node->num_items['und'][0]['value']);
    $node->title = array();
    $node->content['feed_content'] = array(
      '#theme' => 'live_feeds_node',
      '#content' => $content,
      '#link' => $node->url['und'][0]['value'],
    );
  }
  if ($view_mode == 'contextual_view' && $node->type == 'feed') {
    $content = live_feeds_load_feed($node->feed_type['und'][0]['value'],
       $node->url['und'][0]['value'], $node->num_items['und'][0]['value']);
    $node->title = array();
    $node->content['feed_content'] = array(
      '#theme' => 'live_feeds_view',
      '#content' => $content,
      '#link' => $node->url['und'][0]['value'],
    );
  }

}

